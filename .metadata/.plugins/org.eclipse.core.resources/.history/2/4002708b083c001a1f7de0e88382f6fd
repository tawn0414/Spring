package app3;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.GenericXmlApplicationContext;

/*
	스프링을 이용해서 프로그램을 실행하기. 
		- new 연산자를 이용해서 객체생성하는 코드를 직접 정의하지 않는다. (API는 제외)
		- 스프링 내부에서 제공하는 Factory클래스를 이용해서 객체를 전달받는다.
 */
public class MyBeanTest {
	public static void main(String[] args) {
		//스프링의 Factory클래스를 생성하기.
		ApplicationContext factory = new GenericXmlApplicationContext("/config/bean.xml");				
		//필요한 객체를 factory로 부터 가져온다.
		
		//비즈니스로직 호출
		run(obj);
		show(obj);

	}
	public static void run(MyBeanStyleInherit obj) {
		System.out.println("*******************");
		obj.Hello("현빈");
		obj.Hello("현빈");
		System.out.println("*******************");
	}
	
	public static void show(MyBeanStyleInherit obj) {
		System.out.println("====================");
		obj.Hello("현빈");
		obj.Hello("현빈");
		System.out.println("====================");
	}
}

